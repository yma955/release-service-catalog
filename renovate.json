{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "tekton": {
    "schedule": ["* 0-4 * * *"],
    "managerFilePatterns": ["/\\.yaml$/", "/\\.yml$/"],
    "includePaths": [
      ".tekton/**",
      "integration-tests/**",
      "tasks/**",
      "pipelines/**"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": ["stepactions/**/*.yaml"],
    "schedule": ["* 0-4 * * *"]
  }
}
