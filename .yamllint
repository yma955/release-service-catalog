---
rules:
  line-length:
    max: 120
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true
  indentation:
    spaces: consistent
  comments:
    require-starting-space: true
  document-start:
    present: true
  empty-lines:
    max: 1

ignore:
  - .tekton/
  - integration-tests/*/vault/managed-secrets.yaml
  - integration-tests/*/vault/managed-infra-secrets.yaml
  - integration-tests/*/vault/tenant-secrets.yaml
    # very long script in value
  - integration-tests/rhtap-service-push/resources/managed/rpa.yaml
